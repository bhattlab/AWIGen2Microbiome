/* section below needs to be adjusted to local cluster */
executor {
	$slurm {
		queueSize = 100
		queue = "batch"
	}
	$local {
		cpus = 1
		memory = '4 GB'
	}
}


process {
	cache = "lenient"
	clusterOptions = "--account=asbhatt"
	withName: megahit {
		executor = "slurm"
		container = "docker://ghcr.io/jakob-wirbel/micromamba-focal-assembly:latest"
        errorStrategy = {task.attempt <= 3 ? "retry" : "ignore"}
        cpus = 8
        memory = {100.GB * task.attempt}
        time = '24h'
        maxRetries = 3
	}
	withName: prodigal {
        executor = "slurm"
        container = "docker://ghcr.io/jakob-wirbel/micromamba-focal-prodigal:latest"
        errorStrategy = {task.attempt <= 3 ? "retry" : "ignore"}
        cpus = 1
        memory = {10.GB * task.attempt}
        time = '24h'
        maxRetries = 3
	}
	withName: quast {
        executor = "slurm"
        container = "docker://ghcr.io/jakob-wirbel/micromamba-focal-assembly:latest"
        errorStrategy = {task.attempt <= 3 ? "retry" : "ignore"}
        cpus = 1
        memory = {10.GB * task.attempt}
        time = '24h'
        maxRetries = 3
	}
	withName: combine_quast {
        executor = "slurm"
		container = "docker://ghcr.io/jakob-wirbel/micromamba-focal-seaborn:latest"
        errorStrategy = {task.attempt <= 3 ? "retry" : "ignore"}
        cpus = 1
        memory = {10.GB * task.attempt}
        time = '24h'
        maxRetries = 3
	}
}

singularity {
	enabled = true
	autoMounts = true
}
